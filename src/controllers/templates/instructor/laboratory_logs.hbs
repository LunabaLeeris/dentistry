<h1 class="display-4 mt-3"><strong>Laboratory Logs</strong></h1>
<p3 class="display-7">Last Version Saved: {{LAST-DATE}} </p3>
<div class="col align-items-center mt-5 ">
    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
        <input type="radio" class="btn-check" name="btnradio" onclick="insert_to_table(`/instructor/laboratory-logs/0/laboratory_date/desc/current_date{{SEARCH}}`)" id="btnradio1" autocomplete="off" {{TODAY}}>
        <label class="btn rounded-0 border-bottom-0" for="btnradio1">Todayâ€™s Laboratory Logs</label>

        <input type="radio" class="btn-check" name="btnradio" onclick="insert_to_table(`/instructor/laboratory-logs/0/laboratory_date/desc/-{{SEARCH}}`)" id="btnradio2" autocomplete="off" {{ALL}}>
        <label class="btn rounded-0 border-bottom-0" for="btnradio2">All Laboratory Logs</label>
    </div>
    <div class="col border-top border-black  border-1 mb-4"></div>
    <!-- SEARCH BAR -->
    <div class="row d-flex justify-content-left no-gutters align-items-center">
        <div class="col pe-4">
            <div class="row">
                <div class="col">
                <input class="form-control me-3" type="text" id="search-bar" placeholder="Search" aria-label="Search">
                </div>
                <div class="col-auto">
                <button class="btn ms-0 rounded-0 border" name="{{SEARCH-BUTTON}}">
                    <img src="\assets/icons/search.svg" alt="">
                </button>
                </div>
            </div>
        </div>
        <!-- FILTER -->
        <div class="col-auto me-2 dropdown">
            <button class="btn btn-secondary dropdown-toggle mt-0" type="button" id="filter-lab-logs" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="\assets/icons/filter.svg">
            </button>
            <ul class="w-auto dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li><a class="dropdown-item" href="#" onclick="insert_to_table(`/instructor/laboratory-logs/0/laboratory_date/desc/{{DATE-FILTER}}{{SEARCH}}`, `table-data`)">Most Recent</a></li>
                <li><a class="dropdown-item" href="#" onclick="insert_to_table(`/instructor/laboratory-logs/0/laboratory_date/asc/{{DATE-FILTER}}{{SEARCH}}`, `table-data`)">Oldest</a></li>
                <li><a class="dropdown-item" href="#" onclick="insert_to_table(`/instructor/laboratory-logs/0/clinician_id/desc/{{DATE-FILTER}}{{SEARCH}}`, `table-data`)">Clinician</a></li>
            </ul>
        </div>
        <!-- ADD NEW -->
        <div class="col-auto">
            <button id="add-new-lab-logs" type="button" class="btn btn-success rounded-0">
                Submit Daily Report
            </button>
            <button id="add-new-lab-logs" type="button" class="btn btn-danger rounded-0">
                Export To PDF
            </button>
        </div>
    </div>
</div>
<!-- TABLE DATA -->
<div class="col mt-1 table-responsive">
    <table class="table w-100 table-md table-bordered mt-3">
        <thead>
            <tr class="table-primary">
            <th scope="col">#</th>
            <th scope="col">Report ID</th>
            <th scope="col">Clinician name</th>
            <th scope="col">Clinician's ID</th>
            <th scope="col">Time In</th>
            <th scope="col">Time out</th>
            <th scope="col">Remarks</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {{TABLE-DATA}}
            </tr>
        </tbody>
    </table>
</div>
{{EMPTY-TAG}}
<div class="col d-flex justify-content-center mt-5">
{{TABLE-NAV}}
</div>