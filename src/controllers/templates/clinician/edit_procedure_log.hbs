 <div class="row align-items-center">
    <div class="col-auto ">
        <button class="btn ms-0 rounded-0 border" id="back-to-proced-logs" type="submit">
            <img src="\assets/icons/back.svg" alt="">
        </button>
    </div>
    <div class="col">
        <p3 class="display-6">Procedure Logs > {{PROCEDURE-ID}}</h1>
    </div>
</div>
<form id="ProcedureForm">
    <div class="row flex-row d-flex mt-3 g-3">
        <div class="col-md-4">
                <label for="procedure-date" class="form-label">Procedure Date <span class="text-danger">*</span></label>
                <input type="date" class="form-control" id="procedure-date" name="procedure-date">
        </div>
        <div class="col-md-4">
            <label for="room-number" class="form-label">Room Number <span class="text-danger">*</span></label>
            <input type="number" class="form-control rounded-0" id="room-number" name="room-number" placeholder="Enter room number" required>
        </div>
        <div class="col-md-4">
            <label for="chair-number" class="form-label">Chair Number <span class="text-danger">*</span></label>
            <input type="number" class="form-control rounded-0" id="chair-number" name="chair-number" placeholder="Enter chair number" required>
        </div>
        <div class="col-md-4">
            <label for="time-start" class="form-label">Time Start <span class="text-danger">*</span></label>
            <input type="time" class="form-control rounded-0" id="time-start" name="time-start" placeholder="Enter procedure time start" required>
        </div>
        <div class="col-md-4">
            <label for="time-completion" class="form-label">Time Completion <span class="text-danger">*</span></label>
            <input type="time" class="form-control rounded-0" id="time-completion" name="time-completion" placeholder="Enter procedure ended" required>
        </div>
        <div class="col-md-4">
            <label for="tooth-number" class="form-label">Tooth Number</label> <span class="text-danger">*</span></label>
            <input type="number" class="form-control rounded-0" id="tooth-number" name="tooth-number" placeholder="Enter Tooth Number" required>
        </div>
            <div class="col-md-5">
            <label for="instructor-name" class="form-label">Instructor Name <span class="text-danger">*</span></label>
            <select type="select" class="form-select form-control rounded-0" id="instructor-name" name="instructor-name" required>
                {{INSTRUCTORS}}
                <!-- Pre generated Instructors -->
            </select>
        </div>
            <div class="col-md-5">
            <label for="patient-name" class="form-label">Patient Name <span class="text-danger">*</span></label>
            <select type="select" class="form-select form-contro rounded-0" id="patient-name" name="patient-index" required>\
                {{PATIENTS}}
            </select>
        </div>
