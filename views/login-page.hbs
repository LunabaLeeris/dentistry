<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Login</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="row no-gutter">
            <!-- IMG -->
        <div class="col-md-6 full-height w-50 d-flex">
            <img src="/assets\img\sign_up\nu_moa.png" class="img-fluid h-100 w-auto">
        </div>
        <!-- LOGIN INFO SECTION -->
        <div class="col-md-6">
            <div class = "container-fluid">
                <div class="row mt-5">
                    <div class="col d-flex justify-content-center align-items-center">
                        <img class="w-10 h-auto" src="/assets\img\sign_up\nu_logo.png" alt="Logo" class="logo-img">
                        <h1 class="display-7 custom-color-blue"><b>NATIONAL UNIVERSITY MOA</b></h2>
                    </div>
                </div>
                <div class="row text-center">
                    <h2 class="display-8 custom-color-blue">DENTRISTRY CLINICAL TRAINING</h2>
                </div>
                <div class="row text-center">
                    <h5 class="display-8">Sign in with your microsoft 365 account</h5>
                </div>
                {{#if login_error_message}}
                    <div class="row d-flex justify-content-center align-items-center">
                        <h6 class="col-md-7 alert alert-danger mt-4  d-flex justify-content-center">{{login_error_message}}</h6>
                    </div>
                {{/if}}
                <!-- Input field form -->
                <form id="myForm" action="/login" method="POST">
                    <!-- DROP DOWN SELECT USER TYPE -->
                    <div class="form-group row d-flex justify-content-center">
                        <div class="col-md-7 d-flex justify-content-center">
                            <div class="square-container">
                                <img class="profile-icon" src="\assets/icons/profile.svg" alt="SVG Image">
                            </div>
                            <div class="form-group dropdown w-100">
                                <select id="accountTypeBtn" name="user_type" class="form-control dropdown-toggle" type="button" data-bs-toggle="dropdown"required>
                                    <option class="dropdown-item" >Clinician</option>
                                    <option class="dropdown-item" >Instructor</option>
                                    <option class="dropdown-item" >Admin</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <!-- INPUT FIELD EMAIL -->
                    <div class="form-group row d-flex justify-content-center">
                    <div class="col-md-7 d-flex justify-content-center">
                            <div class="square-container">
                                <img class="profile-icon" src="\assets/icons/email.svg" alt="SVG Image">
                            </div>
                            <div class="input-group custom-input-group w-100">
                                <input name="email" type="text" class="form-control" placeholder="Username/E-mail" aria-label="Username/E-mail" aria-describedby="basic-addon1" required>
                            </div>
                        </div>
                    </div>
                    <!-- INPUT FIELD PASSWORD -->
                    <div class="form-group row d-flex justify-content-center">
                        <div class="col-md-7 d-flex justify-content-center">
                            <div class="square-container">
                                <img class="profile-icon" src="\assets/icons/password.svg" alt="SVG Image">
                            </div>
                            <div class="input-group custom-input-group w-100">
                                <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter password" required>
                            </div>
                        </div>
                    </div> 
                    <!-- Login and Forget password -->
                    <div class="form-group row d-flex justify-content-center row custom-margin-mid">
                        <div class="col-md-7 d-flex align-items-center justify-content-between">
                            <button type="submit" class="btn btn-custom"></i>Login</button> <!-- Using Font Awesome for icons -->
                            <a href="#" class="text-primary anchor sml custom-color-blue">Forgot Password?</a>
                        </div>
                    </div>
                </form>
                <!-- privacy policy and terms of use -->
                <div class="form-group row d-flex justify-content-center row custom-margin-large">
                    <div class="col-md-7 d-flex align-items-center justify-content-center">
                        <a href="#" class="text-primary anchor mid mx-3 custom-color-blue">Terms of service</a>
                        <a href="#" class="text-primary anchor mid mx-3 custom-color-blue">Pricacy Policy</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>